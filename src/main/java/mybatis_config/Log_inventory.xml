<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	<mapper namespace="com.what21.dao.Log_inventoryDao">
	
	<resultMap type="Log_inventory" id="Log_inventoryResultMap">
		<id property="id" column="id"/>
		<result property="txLogisticID" column="txLogisticID"/>
		<result property="itemsku" column="itemsku"/>
		<result property="itemName" column="itemName"/>
		<result property="itemCount" column="itemCount"/>
		<result property="Stocklot" column="Stocklot"/>
		<result property="hz" column="hz"/>
		<result property="motion" column="motion"/>
		<result property="type" column="type"/>
		<result property="remark" column="remark"/>
		
	</resultMap>
	
	<!-- <insert id="insert" parameterType="log_inventory">
		INSERT INTO  log_inventory (txLogisticID,itemsku,itemName,itemCount,Stocklot,hz,motion,createDate) 
		VALUES (#{txLogisticID}, #{itemsku}, #{itemName}, #{itemCount},#{Stocklot},#{hz},#{motion},#{createDate}) 
	</insert> -->
	<insert id="insert" parameterType="log_inventory">
		INSERT INTO  log_inventory (txLogisticID,itemsku,itemName,itemCount,Stocklot,hz,motion,createDate,type,remark) 
		VALUES (#{txLogisticID}, #{itemsku}, #{itemName}, #{itemCount},#{Stocklot},#{hz},#{motion},#{createDate},#{type},#{remark}) 
	</insert>
	
	
	
	
	<select id="findtoTinven" resultMap="Log_inventoryResultMap" parameterType="java.util.Map">
		select * from  log_inventory where itemsku =#{itemsku} and  Stocklot =${Stocklot} LIMIT ${startPage},${endPage}
	</select>
	
	<select id="count" resultType="java.lang.Integer" parameterType="java.util.Map">
		select count(1) from log_inventory  where itemsku =#{itemsku} and  Stocklot =${Stocklot}
	</select>
	
	</mapper>