<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	<mapper namespace="com.what21.dao.OrderBatchDao">
	<resultMap type="OrderBatch" id="OrderBatchResultMap">
		<id property="id" column="id"/>
		<result property="batchNumber" column="batchNumber"/>
			<result property="leadTime" column="leadTime"/>
			<result property="leadOrderNumber" column="leadOrderNumber"/>
			<result property="leadOrderTotal" column="leadOrderTotal"/>
			<result property="leadOrderTax" column="leadOrderTax"/>
			<result property="isTax" column="isTax"/>
			<result property="userId" column="userId"/>
			<result property="money" column="money"/>
			<result property="dateTax" column="dateTax"/>
			<result property="zfTime" column="zfTime"/>
	</resultMap>
	
		<select id="findAll" resultMap="OrderBatchResultMap" parameterType="java.util.Map">
			 SELECT * from t_order_batch where 1=1
			 <if test="userId != null and userId != 0">
	 				and userId = #{userId} 
	    	 </if>
	    	 limit ${startPage},${endPage}
		</select>
	
		<select id="count" resultType="java.lang.Integer" parameterType="java.util.Map">
			SELECT count(1) from t_order_batch 
			<where>
				1=1
				<if test="userId != null and userId != 0">
	 				and userId = #{userId} 
	    		</if>
			</where>
		</select>
		
		<insert id="insertBatch" parameterType="OrderBatch">
			INSERT INTO t_order_batch(batchNumber,leadTime,leadOrderNumber, 
				leadOrderTotal,leadOrderTax,isTax)
			VALUES(#{batchNumber},now(),#{leadOrderNumber},#{leadOrderTotal},
				#{leadOrderTax},#{isTax});
		</insert>	
		<update id="updateid" parameterType="OrderBatch">
			update t_order_batch set isTax=1,zfTime=#{zfTime} where id = #{id}
		</update>
		
		<select id="findBarchBond" resultType="OrderBatch" parameterType="java.lang.Integer">
			SELECT * from t_order_batch where id = #{id}
		</select>
</mapper>