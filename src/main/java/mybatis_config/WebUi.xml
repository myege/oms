<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.what21.model.WebUi">
<resultMap type="WebUi" id="WebUiMap">
		<id property="id" column="id" />
		<result property="data" column="data" />
		<result property="code" column="code" />
		<result property="begCode" column="begCode" />
		<result property="isimg" column="isimg" />
	</resultMap>
	<sql id="whereWeb">
		<where>
			1=1
			<if test="code != null">code == #{code}</if>
			<if test="begCode != null">begCode = ${begCode}</if>
		</where>
	</sql>
	<select id="getAboutusMx" resultType="com.what21.model.WebUi">
	select * from WebUi 
	</select>
	
	<!-- (${page} - 1) * ${page},${rows}  -->
	<select id="findAll" parameterType="com.what21.model.WebUi" resultType="com.what21.model.WebUi">
		select * from WebUi <include refid="whereWeb"></include>  <if test=" page !=null">limit   ${page},${rows} </if>
	</select>
	
	<select id="count"  parameterType="com.what21.model.WebUi"  resultType="java.lang.Integer">
		select count(*) from WebUi <include refid="whereWeb"></include> 
	</select>
	
	<select id="findByCode" parameterType="string" resultType="com.what21.model.WebUi">
		select * from WebUi where code like "${value}%" order by code
	</select>
	
	<select id="findByCodeThree" parameterType="java.lang.Integer" resultType="com.what21.model.WebUi">	
select * from WebUi where code like 
 CONCAT(
(select left(code,length(code)-1)  from WebUi where id = #{0}),'%') order by code
	</select>
	
	<update id="update">
	<foreach collection="list" item="item" separator=";">
		update  WebUi set data = #{item.data} where code =#{item.code} and begCode = #{item.begCode}</foreach>
	</update>
	
	<select id="findByBegCode" parameterType="string" resultType="com.what21.model.WebUi">
		select * from WebUi where begCode =#{0} 
	</select>
	
</mapper>