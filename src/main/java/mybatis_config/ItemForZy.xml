	<select id="findAll" resultMap="ItemForZyResultMap" parameterType="java.util.Map">
			SELECT * from item_forzy
		<where>
				1=1
			<if test="userId != null and userId != 0">
          		and userId = #{userId} 
       	 	</if>
			<if test="textForZy != null and textForZy !=''">
				and itemName like '%${textForZy}%'
		    </if>
		    <if test="textForZy1 != null and textForZy1 !=''">
				and itemSKU like '%${textForZy1}%'
		    </if>
			<!-- <if test=" timeForZy !='' and timeForZy != null and  (timeForZy1 !='' or timeForZy1 !=null)">
				and createDateTime &gt;='${timeForZy}' and createDateTime &lt;='${timeForZy1}'
			</if> -->
		</where>
			order by genre
			LIMIT #{startPage},#{endPage}
	</select>
	
	<select id="count" resultType="java.lang.Integer" parameterType="java.util.Map">
			SELECT count(1) from item_forzy
		<where>
				1=1
			<if test="userId != null and userId != 0">
          		and userId = #{userId} 
       	 	</if>
			<if test="textForZy != null and textForZy !=''">
				and itemName like '%${textForZy}%'
		    </if>
		    <if test="textForZy1 != null and textForZy1 !=''">
				and itemSKU like '%${textForZy1}%'
		    </if>
			<!-- <if test=" timeForZy !='' and timeForZy != null and  (timeForZy1 !='' or timeForZy1 !=null)">
				and createDateTime &gt;='${timeForZy}' and createDateTime &lt;='${timeForZy1}'
			</if> -->
		</where>
				 
	</select>
	
	<select id="dateTime" resultMap="ItemForZyResultMap" parameterType="java.util.Map">
	 		SELECT * from item_forzy
		<where>
				1=1
			<if test="userId != null and userId != 0">
          		and userId = #{userId} 
       	 	</if>
			<if test="textForZy != null and textForZy !=''">
				and itemName like '%${textForZy}%'
		    </if>
		    <if test="textForZy1 != null and textForZy1 !=''">
				and itemSKU like '%${textForZy1}%'
		    </if>
			<!-- <if test=" timeForZy !='' and timeForZy != null and  (timeForZy1 !='' or timeForZy1 !=null)">
				and createDateTime &gt;='${timeForZy}' and createDateTime &lt;='${timeForZy1}'
			</if> -->
